<Window x:Class="ImageSplitter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ImageSplitter" Height="350" Width="525">
    <Grid>
        <StackPanel Width="500">
            <StackPanel Orientation="Horizontal" Height="25">
                <TextBox Text="{Binding Path=FileName}" Width="400"></TextBox>
                <Button Click="ButtonFile_Click" Name="buttonFile" Width="100">Choose file</Button>
            </StackPanel>
            <StackPanel Margin="0,15,0,0">
                    <Button Click="ButtonSplit_Click" Name="buttonSplit">Split</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
